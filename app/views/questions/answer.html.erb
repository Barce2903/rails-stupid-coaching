<div class="p-3">
  <h1>Stupid Coaching</h1>
  <figure class="bg-white p-3 rounded" style="border-left: .25rem solid #a34e78;">
    <blockquote class="blockquote">
      <p><%= params["question"] %></p>
      <footer class="blockquote-footer">You</footer>
    </blockquote>
  </figure>
  <figure class="bg-white p-3 rounded" style="border-left: .25rem solid #a34e78;">
    <blockquote class="blockquote">
      <p><strong><%= @answer %></strong></p>
      <footer class="blockquote-footer">Your coach</footer>
    </blockquote>
  </figure>
  <%= link_to "Ask a new question", "/ask" %>
</div>
